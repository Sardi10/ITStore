@model NewarkITStore.Models.ProductType

@{
    ViewData["Title"] = "Edit Product Type";
}

<h2 class="mb-4">
    <i class="bi bi-pencil-square text-warning me-2"></i>@ViewData["Title"]
</h2>

<form asp-action="Edit" method="post" class="card p-4 shadow-sm w-100" style="max-width: 600px;">
    <input type="hidden" asp-for="ProductTypeId" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">
            <i class="bi bi-tag-fill me-1"></i>Type Name
        </label>
        <input asp-for="Name" class="form-control" placeholder="Enter product type name" />
        <span asp-validation-for="Name" class="text-danger small"></span>
    </div>

    <div class="d-flex justify-content-end gap-2 mt-3">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save me-1"></i>Update
        </button>
        <a asp-action="Index" class="btn btn-danger">
            <i class="bi bi-x-circle me-1"></i>Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
