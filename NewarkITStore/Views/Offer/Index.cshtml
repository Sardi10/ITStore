@model IEnumerable<NewarkITStore.Models.Offer>

@{
    ViewData["Title"] = "All Offers";
}

<div class="container">
    <h2 class="fw-bold mb-4">
        <i class="bi bi-stars"></i> @ViewData["Title"]
    </h2>

    <a class="btn btn-primary mb-4" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Create New Offer
    </a>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Product</th>
                    <th>Offer Price</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var offer in Model)
                {
                    <tr>
                        <td>@offer.Product?.Name</td>
                        <td>@offer.OfferPrice.ToString("C")</td>
                        <td>@offer.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@offer.EndDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@offer.OfferId" class="btn btn-sm btn-warning me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@offer.OfferId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
