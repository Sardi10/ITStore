@model NewarkITStore.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<h2>@ViewData["Title"]</h2>

<div class="card p-4">
    <div class="row align-items-center">
        <div class="col-md-2 text-center">
            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
            {
                <img src="@Url.Content(Model.ProfilePictureUrl)" alt="Profile Picture" class="img-fluid rounded-circle mb-2" style="max-height: 120px;" />
            }
            else
            {
                <div class="bg-light rounded-circle d-inline-block" style="width: 120px; height: 120px;">
                    <span class="d-block text-muted mt-5">No Image</span>
                </div>
            }
        </div>
        <div class="col-md-10">
            <h5>Status: @Model.Status</h5>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @(!string.IsNullOrEmpty(Model.PhoneNumber) ? Model.PhoneNumber : "Not Set")</p>
            <p><strong>Date of Birth:</strong> @(Model.DateOfBirth?.ToShortDateString() ?? "Not Set")</p>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Edit" class="btn btn-warning px-4">Edit Profile</a>
    </div>

    <div class="text-center mt-2">
        <a asp-action="ChangePassword" class="btn btn-outline-dark px-4">Change Password</a>
    </div>

    <hr />

    <h4>Credit Card</h4>
    @if (!string.IsNullOrEmpty(Model.MaskedCreditCard))
    {
        <p>@Model.MaskedCreditCard</p>
    }
    else
    {
        <p>No credit card added.</p>
    }
    <div class="text-center">
        <a asp-controller="CreditCard" asp-action="Index" class="btn btn-outline-primary w-50">Manage Cards</a>
    </div>

    <hr />

    <h4>Shipping Address</h4>
    @if (!string.IsNullOrEmpty(Model.DefaultShippingAddressName))
    {
        <p>@Model.DefaultShippingAddressName</p>
    }
    else
    {
        <p>No address added.</p>
    }
    <div class="text-center">
        <a asp-controller="ShippingAddress" asp-action="Index" class="btn btn-outline-primary w-50">Manage Addresses</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
