@model IEnumerable<NewarkITStore.Models.ShippingAddress>

@{
    ViewData["Title"] = "Shipping Addresses";
}

<h2 class="mb-4">
    <i class="bi bi-truck text-primary me-2"></i>@ViewData["Title"]
</h2>

<a asp-action="Create" class="btn btn-success mb-3">
    <i class="bi bi-plus-circle-fill me-1"></i> Add Address
</a>

@if (!Model.Any())
{
    <div class="alert alert-info d-flex align-items-center">
        <i class="bi bi-info-circle-fill me-2"></i>
        You don't have any Shipping Addresses saved.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover text-center align-middle">
            <thead class="table-light">
                <tr>
                    <th><i class="bi bi-tag-fill me-1"></i>Name</th>
                    <th><i class="bi bi-signpost-fill me-1"></i>Street</th>
                    <th><i class="bi bi-building me-1"></i>City</th>
                    <th><i class="bi bi-mailbox me-1"></i>ZIP</th>
                    <th><i class="bi bi-globe me-1"></i>Country</th>
                    <th><i class="bi bi-gear-fill me-1"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AddressName</td>
                        <td>@item.StreetNumber @item.Street</td>
                        <td>@item.City</td>
                        <td>@item.Zip</td>
                        <td>@item.Country</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2 flex-wrap">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
