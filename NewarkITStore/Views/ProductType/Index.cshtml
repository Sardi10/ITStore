@model IEnumerable<NewarkITStore.Models.ProductType>

@{
    ViewData["Title"] = "Manage Product Types";
}

<h2 class="mb-4">
    <i class="bi bi-tags-fill me-2 text-primary"></i>@ViewData["Title"]
</h2>

<a class="btn btn-success mb-3" asp-action="Create">
    <i class="bi bi-plus-circle-fill me-1"></i> Add New Type
</a>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle-fill me-1"></i>No product types found. Click <strong>Add New Type</strong> to create one.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th><i class="bi bi-tag-fill me-1"></i>Name</th>
                    <th style="width: 200px;"><i class="bi bi-gear-fill me-1"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var type in Model)
                {
                    <tr>
                        <td>@type.Name</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@type.ProductTypeId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square me-1"></i>Edit
                                </a>

                                <form asp-action="Delete" asp-route-id="@type.ProductTypeId"
                                      method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this product type?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash-fill me-1"></i>Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
