@model NewarkITStore.Models.Offer

@{
    ViewData["Title"] = "Delete Offer";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this offer?</h4>

<div class="mb-4">
    <dl class="row">
        <dt class="col-sm-3">Product</dt>
        <dd class="col-sm-9">@Model.Product?.Name</dd>

        <dt class="col-sm-3">Offer Price</dt>
        <dd class="col-sm-9">@Model.OfferPrice.ToString("C")</dd>

        <dt class="col-sm-3">Start Date</dt>
        <dd class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">End Date</dt>
        <dd class="col-sm-9">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="OfferId" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>
