@model NewarkITStore.Models.ShippingAddress

@{
    ViewData["Title"] = "Edit Shipping Address";
}

<h2 class="mb-4">
    <i class="bi bi-pencil-square text-warning me-2"></i>@ViewData["Title"]
</h2>

<form asp-action="Edit" method="post" class="card shadow-sm p-4">
    <input type="hidden" asp-for="Id" />

    @Html.Partial("_ShippingAddressForm", Model)

    <div class="d-flex justify-content-end gap-2 mt-4">
        <button type="submit" class="btn btn-success px-4">
            <i class="bi bi-save me-1"></i>Update
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4">
            <i class="bi bi-x-circle me-1"></i>Cancel
        </a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
