@model NewarkITStore.Models.Offer

@{
    ViewData["Title"] = "Delete Offer";
}

<div class="container">
    <h2 class="fw-bold mb-4 text-danger">
        <i class="bi bi-exclamation-triangle-fill"></i> @ViewData["Title"]
    </h2>

    <h4 class="mb-4">Are you sure you want to delete this offer?</h4>

    <div class="border rounded-3 p-4 bg-light shadow-sm mb-4">
        <dl class="row mb-0">
            <dt class="col-sm-4">Product</dt>
            <dd class="col-sm-8">@Model.Product?.Name</dd>

            <dt class="col-sm-4">Offer Price</dt>
            <dd class="col-sm-8">@Model.OfferPrice.ToString("C")</dd>

            <dt class="col-sm-4">Start Date</dt>
            <dd class="col-sm-8">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-4">End Date</dt>
            <dd class="col-sm-8">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="d-flex gap-3">
        <input type="hidden" asp-for="OfferId" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash-fill"></i> Yes, Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>
</div>
