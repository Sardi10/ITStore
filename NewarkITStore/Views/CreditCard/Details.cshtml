@model NewarkITStore.Models.CreditCard

@{
    ViewData["Title"] = "Credit Card Details";
}

<h2>@ViewData["Title"]</h2>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Card Number</dt>
        <dd class="col-sm-9">@Model.CardNumber</dd>

        <dt class="col-sm-3">Card Type</dt>
        <dd class="col-sm-9">@Model.CardType</dd>

        <dt class="col-sm-3">Name on Card</dt>
        <dd class="col-sm-9">@Model.CardHolderName</dd>

        <dt class="col-sm-3">Expiration</dt>
        <dd class="col-sm-9">@Model.ExpiryDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Billing Address</dt>
        <dd class="col-sm-9">
            @Model.BillingStreet<br />
            @Model.BillingCity, @Model.BillingState<br />
            @Model.BillingZip, @Model.BillingCountry
        </dd>
    </dl>
    <div class="row mb-3 ">
        <div class="col-md-3 text-end">
            <a asp-action="Edit" asp-route-id="@Model.CreditCardId" class="btn btn-primary btn-block px-4 py-2" style="min-width: 120px;">Edit</a>
    </div>
            <div class="col-md-3 ">
            <a asp-action="Index" class="btn btn-secondary btn-block px-4 py-2" style="min-width: 120px;">Back to List</a>
    </div>
    </div>
</div>
