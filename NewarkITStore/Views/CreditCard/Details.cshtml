@model NewarkITStore.Models.CreditCard

@{
    ViewData["Title"] = "Credit Card Details";
}

<h2 class="mb-4">
    <i class="bi bi-credit-card-2-front-fill text-primary me-2"></i>@ViewData["Title"]
</h2>

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-3">
            <i class="bi bi-credit-card-fill me-1"></i>Card Number
        </dt>
        <dd class="col-sm-9">**** **** **** @Model.CardNumber[^4..]</dd>

        <dt class="col-sm-3">
            <i class="bi bi-ui-checks-grid me-1"></i>Card Type
        </dt>
        <dd class="col-sm-9">@Model.CardType</dd>

        <dt class="col-sm-3">
            <i class="bi bi-person-fill me-1"></i>Name on Card
        </dt>
        <dd class="col-sm-9">@Model.CardHolderName</dd>

        <dt class="col-sm-3">
            <i class="bi bi-calendar2-check-fill me-1"></i>Expiration
        </dt>
        <dd class="col-sm-9">@Model.ExpiryDate.ToShortDateString()</dd>

        <dt class="col-sm-3">
            <i class="bi bi-geo-alt-fill me-1"></i>Billing Address
        </dt>
        <dd class="col-sm-9">
            @Model.BillingStreet<br />
            @Model.BillingCity, @Model.BillingState<br />
            @Model.BillingZip, @Model.BillingCountry
        </dd>
    </dl>

    <div class="d-flex justify-content-end gap-2 mt-4">
        <a asp-action="Edit" asp-route-id="@Model.CreditCardId" class="btn btn-primary px-4">
            <i class="bi bi-pencil-fill me-1"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-danger px-4">
            <i class="bi bi-arrow-left-circle me-1"></i>Back to List
        </a>
    </div>
</div>
