@model IEnumerable<NewarkITStore.Models.Offer>

@{
    ViewData["Title"] = "All Offers";
}

<h2>@ViewData["Title"]</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Create New Offer</a>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Product</th>
            <th>Offer Price</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var offer in Model)
        {
            <tr>
                <td>@offer.Product?.Name</td>
                <td>@offer.OfferPrice.ToString("C")</td>
                <td>@offer.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@offer.EndDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@offer.OfferId" class="btn btn-sm btn-warning me-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@offer.OfferId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
