@model IEnumerable<NewarkITStore.Models.CreditCard>

@{
    ViewData["Title"] = "My Credit Cards";
}

<h2 class="mb-4">
    <i class="bi bi-credit-card-2-front-fill text-primary me-2"></i>@ViewData["Title"]
</h2>

<a class="btn btn-success mb-3" asp-action="Create">
    <i class="bi bi-plus-circle-fill me-1"></i> Add New Card
</a>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle-fill me-1"></i>You don't have any credit cards saved.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th><i class="bi bi-credit-card-2-back me-1"></i>Card Number</th>
                    <th><i class="bi bi-card-text me-1"></i>Type</th>
                    <th><i class="bi bi-person-fill me-1"></i>Name</th>
                    <th><i class="bi bi-calendar2-event me-1"></i>Expires</th>
                    <th><i class="bi bi-gear-fill me-1"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var card in Model)
                {
                    <tr>
                        <td>**** **** **** @card.CardNumber[^4..]</td>
                        <td>@card.CardType</td>
                        <td>@card.CardHolderName</td>
                        <td>@card.ExpiryDate.ToString("MM/yyyy")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@card.CreditCardId" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square me-1"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@card.CreditCardId" class="btn btn-sm btn-outline-danger ms-2">
                                <i class="bi bi-trash-fill me-1"></i>Delete
                            </a>
                            <a asp-action="Details" asp-route-id="@card.CreditCardId" class="btn btn-sm btn-outline-secondary ms-2">
                                <i class="bi bi-eye-fill me-1"></i>View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
