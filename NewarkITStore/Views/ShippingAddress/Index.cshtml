@model IEnumerable<NewarkITStore.Models.ShippingAddress>
@{
    ViewData["Title"] = "Shipping Addresses";
}

<h2>Your Shipping Addresses</h2>
<a asp-action="Create" class="btn btn-primary mb-3">+ Add Address</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Street</th>
            <th>City</th>
            <th>ZIP</th>
            <th>Country</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AddressName</td>
                <td>@item.StreetNumber @item.Street</td>
                <td>@item.City</td>
                <td>@item.Zip</td>
                <td>@item.Country</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
