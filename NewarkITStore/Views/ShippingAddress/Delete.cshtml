@model NewarkITStore.Models.ShippingAddress

@{
    ViewData["Title"] = "Delete Shipping Address";
}

<h2 class="mb-4">
    <i class="bi bi-trash-fill text-danger me-2"></i>@ViewData["Title"]
</h2>

<div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    Are you sure you want to delete this address?
</div>

<div class="card shadow-sm p-4 mb-3">
    <dl class="row">
        <dt class="col-sm-3">
            <i class="bi bi-tag-fill me-1"></i>Address Name
        </dt>
        <dd class="col-sm-9">@Model.AddressName</dd>

        <dt class="col-sm-3">
            <i class="bi bi-signpost-2-fill me-1"></i>Street
        </dt>
        <dd class="col-sm-9">@Model.Street @Model.StreetNumber</dd>

        <dt class="col-sm-3">
            <i class="bi bi-building-fill me-1"></i>City
        </dt>
        <dd class="col-sm-9">@Model.City</dd>

        <dt class="col-sm-3">
            <i class="bi bi-mailbox me-1"></i>ZIP
        </dt>
        <dd class="col-sm-9">@Model.Zip</dd>

        <dt class="col-sm-3">
            <i class="bi bi-globe me-1"></i>Country
        </dt>
        <dd class="col-sm-9">@Model.Country</dd>
    </dl>

    <form asp-action="Delete" method="post" class="d-flex justify-content-end gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger px-4">
            <i class="bi bi-trash-fill me-1"></i>Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4">
            <i class="bi bi-x-circle me-1"></i>Cancel
        </a>
    </form>
</div>
