@model List<NewarkITStore.Models.Product>

@{
    ViewData["Title"] = "Welcome to Newark-IT Store";
}

<h2>Featured Products</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <h6 class="card-subtitle text-muted">@product.ProductType?.Name</h6>
                    <p class="card-text">@product.Description</p>
                    <p><strong>Price:</strong> $@product.RecommendedPrice</p>
                    <p><strong>Stock:</strong> @product.QuantityInStock</p>
                    <button class="btn btn-outline-primary" disabled>Add to Basket (coming soon)</button>
                </div>
            </div>
        </div>
    }
</div>