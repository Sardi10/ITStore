@model NewarkITStore.Models.CreditCard

@{
    ViewData["Title"] = "Delete Credit Card";
}

<h2 class="mb-4">
    <i class="bi bi-trash-fill text-danger me-2"></i>@ViewData["Title"]
</h2>

<div class="alert alert-warning d-flex align-items-center mb-3" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    Are you sure you want to delete this credit card?
</div>

<div class="card shadow-sm p-4 mb-3">
    <dl class="row">
        <dt class="col-sm-3">
            <i class="bi bi-credit-card-fill me-1"></i>Card Number
        </dt>
        <dd class="col-sm-9">**** **** **** @Model.CardNumber[^4..]</dd>

        <dt class="col-sm-3">
            <i class="bi bi-ui-checks-grid me-1"></i>Card Type
        </dt>
        <dd class="col-sm-9">@Model.CardType</dd>

        <dt class="col-sm-3">
            <i class="bi bi-person-fill me-1"></i>Name on Card
        </dt>
        <dd class="col-sm-9">@Model.CardHolderName</dd>

        <dt class="col-sm-3">
            <i class="bi bi-geo-alt-fill me-1"></i>Billing Address
        </dt>
        <dd class="col-sm-9">
            @Model.BillingStreet, @Model.BillingCity, @Model.BillingState, @Model.BillingZip, @Model.BillingCountry
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-4 d-flex gap-2 justify-content-end">
        <input type="hidden" asp-for="CreditCardId" />
        <button type="submit" class="btn btn-danger px-4">
            <i class="bi bi-trash-fill me-1"></i>Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4">
            <i class="bi bi-x-circle me-1"></i>Cancel
        </a>
    </form>
</div>
