@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@model List<NewarkITStore.Models.Product>

@{
    ViewData["Title"] = "Welcome to Newark-IT Store";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>Featured Products</h2>
        </div>
        <div class="col-md-4">
            <input type="text" id="liveSearchBox" class="form-control" placeholder="Search by name or type..." />
        </div>
    </div>

    <div class="row" id="productResults">
        @await Html.PartialAsync("_ProductCards", Model)
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#liveSearchBox").on("keyup", function () {
                var term = $(this).val();
                $.get("/Home/SearchProducts", { term: term }, function (data) {
                    $("#productResults").html(data);
                });
            });
        });
    </script>
}
