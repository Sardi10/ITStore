@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@model List<NewarkITStore.Models.Product>

@{
    ViewData["Title"] = "Welcome to Newark-IT Store";
}

<h2>Featured Products</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(product.ImageFileName))
                    {
                        <img src="~/images/@product.ImageFileName"
                             class="card-img-top"
                             style="object-fit: contain; height: 200px;"
                             alt="Product image" />
                    }
                    <h5 class="card-title">@product.Name</h5>
                    <h6 class="card-subtitle text-muted">@product.ProductType?.Name</h6>
                    <p class="card-text">@product.Description</p>
                    @{
                        var offer = ((List<NewarkITStore.Models.Offer>)ViewBag.Offers)?.FirstOrDefault(o => o.ProductId == product.ProductId);
                        bool isEligible = ViewBag.UserStatus == "Gold" || ViewBag.UserStatus == "Platinum";
                    }

                    @if (offer != null && isEligible)
                    {
                        <p>
                            <strong>Price:</strong>
                            <span class="text-muted text-decoration-line-through">$@product.RecommendedPrice</span>
                            <span class="text-success fw-bold ms-2">$@offer.OfferPrice</span>
                            <span class="badge bg-success ms-2">Offer!</span>
                        </p>
                    }
                    else
                    {
                        <p><strong>Price:</strong> $@product.RecommendedPrice</p>
                    }

                    @* <p><strong>Stock:</strong> @product.QuantityInStock</p> *@
                    @* <form asp-controller="Basket" asp-action="Add" method="post"> *@
                    @*     <input type="hidden" name="productId" value="@product.ProductId" /> *@
                    @*     <button type="submit" class="btn btn-outline-primary">Add to Basket</button> *@
                    @* </form> *@
                 
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <form asp-controller="Basket" asp-action="Add" method="post">
                                <input type="hidden" name="productId" value="@product.ProductId" />
                                <button type="submit" class="btn btn-outline-primary">Add to Basket</button>
                            </form>
                        }
                        else
                        {
                            <form method="get" asp-area="Identity" asp-page="/Account/Login">
                                <input type="hidden" name="ReturnUrl" value="/Home" />
                                <button type="submit" class="btn btn-outline-primary">Add to Basket</button>
                            </form>
                        }
                    

                </div>
            </div>
        </div>
    }
</div>